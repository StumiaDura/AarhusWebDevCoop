@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Homepage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}
<header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Aarhus Web Coop</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <h2>We build websites that work, really work.</h2>
            </div>

        </div>
    </div>
    <div class="col-md-12 text-center mbtn">
        <button id="singlebutton" name="singlebutton" class="btn btn-outline-primary btn-lg"><h4 class="lead">Check our projects !</h4></button>
    </div>
</header>
@*Grid*@
<section class="features-icons bg-light text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="fas fa-desktop m-auto text-primary"></i>
                    </div>
                    <h3>@Umbraco.Field("boxTitle")</h3>
                    <p class="lead mb-0">@Umbraco.Field("boxContent")</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="fas fa-archive m-auto text-primary"></i>
                    </div>
                    <h3>@Umbraco.Field("box2Title")</h3>
                    <p class="lead mb-0">@Umbraco.Field("box2Content")</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="fas fa-check m-auto text-primary"></i>
                    </div>
                    <h3>@Umbraco.Field("box3Title")</h3>
                    <p class="lead mb-0">@Umbraco.Field("box3Content")</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="features-icons bg-dark text-center">
    <h1 class="mh-100" style="color:white;">Newest Projects</h1>
    <br />
    <div class="row container-fluid">@Umbraco.RenderMacro("ListNewestProjects")</div>

</section>

@*Content*@
<div class="container-fluid">
    <div id="main" class="wrapper clearfix">

        <article>

            <p></p>
        </article>
    </div> <!-- #main -->
</div> <!-- #main-container -->
<section class="showcase">
    <div class="container-fluid p-0">
        <div class="row no-gutters">

            <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('@Umbraco.Media(@CurrentPage.firstRowImage.ToString()).Url')"></div>
            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                <h2>@Umbraco.Field("firstRowTitle")</h2>
                <p class="lead mb-0">@Umbraco.Field("firstRowText")</p>
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-lg-6 text-white showcase-img" style="background-image: url('@Umbraco.Media(@CurrentPage.secondRowImage.ToString()).Url')"></div>
            <div class="col-lg-6 my-auto showcase-text">
                <h2>@Umbraco.Field("secondRowTitle")</h2>
                <p class="lead mb-0">@Umbraco.Field("secondRowText")</p>
            </div>
        </div>

    </div>
</section>


